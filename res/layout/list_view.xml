<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/list"
    android:paddingRight="8dp"
    android:paddingLeft="2dp"
    android:paddingTop="@dimen/list_paddingtop" >

    <TextView
        android:id="@+id/countcomment"
        android:layout_width="@dimen/list_count_width"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/hello_world"
        android:textSize="@dimen/list_count_text_size"
        android:textStyle="bold" />
    
    <ImageView
        android:id="@+id/is_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:contentDescription="@string/hello_world"
        android:src="@drawable/img"
        android:visibility="visible" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/countcomment"
        android:layout_toLeftOf="@id/is_img"
        android:gravity="center_vertical"
        android:text="@string/hello_world"
        android:textSize="@dimen/list_title_text_size"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/ownerid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_below="@id/title"
        android:layout_alignLeft="@id/title"
        android:layout_alignParentBottom="true"
        android:text="@string/hello_world"
        android:textSize="@dimen/list_ect_text_size" />

    <TextView
        android:id="@+id/writedtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/hello_world"
        android:textSize="@dimen/list_ect_text_size" />
    
    <TextView
        android:id="@+id/list_url"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />
    
</RelativeLayout>
